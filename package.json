{
  "name": "generator-forge",
  "version": "0.0.5",
  "description": "Generator of Autodesk Forge server applications.",
  "homepage": "https://github.com/petrbroz/generator-forge",
  "author": {
    "name": "Petr Broz",
    "email": "petr.broz@autodesk.com",
    "url": "https://forge.autodesk.com/author/petr-broz"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "autodesk",
    "forge",
    "yeoman-generator"
  ],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "eslint": "^6.6.0",
    "prettier": "^1.19.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-config-xo": "^0.27.2",
    "jest": "^24.8.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "quotes": [2, "single"]
    },
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest"
  },
  "repository": "petrbroz/generator-forge",
  "license": "MIT"
}
